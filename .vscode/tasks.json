{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"type": "shell",
			"command": "g++ -g ${file} -o ${workspaceFolder}/binary/${fileBasenameNoExtension} ",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": "$gcc"
		},
		{
			"label": "run code",
			"type": "shell",
			"command": "g++ -g ${file} -o ${workspaceFolder}/binary/${fileBasenameNoExtension} && ${workspaceFolder}/binary/${fileBasenameNoExtension}",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": "$gcc"
		},
	]
}